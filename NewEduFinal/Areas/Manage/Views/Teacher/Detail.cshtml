
@model Teacher
@{
    ViewData["Title"] = "Detail";
    int counter = 1;
}



<div class="row justify-content-between">
    <div class="col-lg-2">
        <h1 class="h3 mb-4 text-gray-800">@Model.Name Teacher Page</h1>
    </div>
    <div class="col-lg-1">
        <a asp-area="manage" asp-controller="teacher" asp-action="index" class="btn btn-primary">Go Home</a>
    </div>
</div>

<div class="row">
    <div class="col">
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="~/img/teacher/@Model.Image" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@Model.Name @Model.SurName</h5>
               
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>No</th>
                    <th>FullName</th>
                    <th>Mail</th>
                    <th>PhoneNumber</th>
                    <th>Degree</th>
                    <th>Psition</th>
                    <th>Hobbies</th>

                </tr>
            </thead>
            <tbody>
               
                <tr>
                    <td>@counter</td>
                    <td>@Model.Name @Model.SurName</td>
                    <td>@Model.Mail</td>
                    <td>@Model.PhoneNumber</td>
                    <td>@Model.Degree</td>
                    @foreach (var item in Model.TeacherPositions)
                    {
                        <td>@item.Position.Name</td>

                    }
                    @foreach (var item in Model.TeacherHobbies)
                    {
                        <td>@item.Hobbies.Name</td>

                        counter++;
                    }
                    <td>
                        <a class="btn btn-warning" asp-area="manage" asp-controller="teacher" asp-action="update" asp-route-id="@Model.Id">Update</a>
                        <a class="btn btn-danger" asp-area="manage" asp-controller="teacher" asp-action="delete" asp-route-id="@Model.Id">Delete</a>
                    </td>
                </tr>
               
            </tbody>
        </table>
    </div>
</div>



