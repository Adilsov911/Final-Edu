
@model List<Course>
@{ ViewData["Title"] = "Index";
    int counter = 1; }
<div class="row justify-content-between">
    <div class="col-lg-2">
        <h1 class="h3 mb-4 text-gray-800">Category Page</h1>
    </div>
    <div class="col-lg-1">
        <a asp-area="manage" asp-controller="course" asp-action="create" class="btn btn-primary">Create</a>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Image</th>
                    <th>Title</th>
                    <th>Setting</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Course course in Model)
                {
                    <tr>
                        <td>@counter</td>
                        <td><img class="card-img-top " style="width:200px;" src="~/@course.Image" alt="Card image cap"></td>
                        <td>@course.Name</td>
                        <td>
                            <a class="btn btn-warning" asp-area="manage" asp-controller="category" asp-action="update" asp-route-id="@course.Id">Update</a>
                            <a class="btn btn-danger" asp-area="manage" asp-controller="category" asp-action="delete" asp-route-id="@course.Id">Delete</a>
                            <a class="btn btn-primary" asp-area="manage" asp-controller="category" asp-action="detail" asp-route-id="@course.Id">Detail</a>
                        </td>
                    </tr>
                    counter++;
                }
            </tbody>
        </table>
    </div>
</div>
